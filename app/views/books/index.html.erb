<div class="notice"><%= flash[:success] %></div>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>title</th>
			<th>Body</th>
		</tr>
	</thead>
	<% @books.each do |book| %>
	<tbody>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show",book_path(book.id) %></td>
			<td><%= link_to "Edit",edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Areyou sure?' } %></td>
		</tr>
	</tbody>
	<% end %>
</table>



<!-- 投稿機能 -->
<h2>New Book</h2>
<%= form_for(@book,url:"/books") do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>
 
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

    <h4>title</h4>
    <%= f.text_field :title %>
 
    <h4>body</h4>
    <%= f.text_area :body %><br>
 
    <%= f.submit 'Create Book' %>

<% end %>

